<p id="notice"><%= notice %></p>

<h1>Players</h1>

<table class="hover">
  <thead>
    <tr>
      <th width="300">First name</th>
      <th width="300" >Last name</th>
      <th width="300">Contact number</th>
      <th>Email</th>
      <th width="300" colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @players.each do |player| %>
      <tr>
        <td><%= player.first_name %></td>
        <td><%= player.last_name %></td>
        <td><%= player.contact_number %></td>
        <td><%= player.email %></td>
        <td><%= link_to 'Show', player %></td>
        <td><%= link_to 'Edit', edit_player_path(player) %></td>
        <td><%= link_to 'Destroy', player, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

